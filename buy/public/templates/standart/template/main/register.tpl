<main>
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-6 col-sm-12">
				<div class="card">
					<div class="modal-header">
						<h5 class="modal-title">
							Регистрация аккаунта
						</h5>
					</div>
					<div class="card-body">
						<div class="input-group mb-2">
							<span class="input-group-text">
								<i class="fas fa-baby text-white"></i>
							</span>
							<input id="name" class="form-control" type="text" placeholder="Введите имя" autocomplete="off">
						</div>
						<div class="input-group mb-2">
							<span class="input-group-text">
								<i class="fas fa-user text-white"></i>
							</span>
							<input id="login" class="form-control" type="text" placeholder="Введите логин" autocomplete="off">
						</div>
						<div class="input-group mb-2">
							<span class="input-group-text">
								<i class="fas fa-key text-white"></i>
							</span>
							<input id="password" class="form-control" type="password" placeholder="Введите пароль" autocomplete="off">
						</div>
						<div class="d-flex justify-content-end">
							<button class="btn btn-sm bg-default" onclick="register();">
								Завершить регистрацию
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>